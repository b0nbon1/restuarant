{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "module-resolver",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "module-resolver/use-alias": 2,
        "class-methods-use-this": 0,
        "arrow-parens": "off",
        "object-curly-newline": "off",
        "function-paren-newline": "off",
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "new-cap": 0,
        "consistent-return": 0,
        "no-param-reassign": 0,
        "comma-dangle": 0,
        "default-case": "off",
        "prettier/prettier": [
            "error"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "import/no-unresolved": [
            2,
            {
                "commonjs": true
            }
        ],
        "no-shadow": [
            "error",
            {
                "allow": [
                    "req",
                    "res",
                    "err"
                ]
            }
        ],
        "valid-jsdoc": [
            "error",
            {
                "requireReturn": true,
                "requireReturnType": true,
                "requireParamDescription": false,
                "requireReturnDescription": true
            }
        ],
        "require-jsdoc": [
            "error",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": true,
                    "ClassDeclaration": true
                }
            }
        ]
    }
}